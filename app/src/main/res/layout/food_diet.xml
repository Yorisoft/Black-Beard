<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/scrollAndEnclosure"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:googleads="http://schemas.android.com/apk/lib/com.google.ads"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".FoodGuide"
    android:background="@drawable/desert02"
    android:scrollbars="none"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/enclosureLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/dietTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Food - Diet"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="36sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/divideOne"
            style="@style/Divider"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/enclosureSumm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="start"
            android:text="@string/foodIntro"
            android:textAlignment="textStart"
            android:textColor="@color/colorLayout"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/sectionOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_corners_alpha">

            <TextView
                android:id="@+id/titleOneOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="8dp"
                android:text="Water"
                android:textColor="@color/colorAccent"
                android:textSize="30sp" />

            <View
                android:id="@+id/divideTwo"
                style="@style/dividerGreen"
                android:layout_below="@id/titleOneOne"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/infoOneOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divideTwo"
                android:layout_margin="8dp"
                android:text="@string/waterOne"
                android:textColor="@color/colorPrimaryText"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sectionTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_corners_alpha">

            <TextView
                android:id="@+id/titleOneTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="8dp"
                android:text="Vitamins"
                android:textColor="@color/colorAccent"
                android:textSize="30sp" />

            <View
                android:id="@+id/divideThree"
                style="@style/dividerGreen"
                android:layout_below="@id/titleOneTwo"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/infoOneTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divideThree"
                android:layout_margin="8dp"
                android:text="@string/vitaminsOne"
                android:textColor="@color/colorPrimaryText"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sectionThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_corners_alpha">

            <TextView
                android:id="@+id/titleOneThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="8dp"
                android:text="Proteins / Insects"
                android:textColor="@color/colorAccent"
                android:textSize="30sp" />

            <View
                android:id="@+id/divideFour"
                style="@style/dividerGreen"
                android:layout_below="@id/titleOneThree"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/infoOneThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divideFour"
                android:layout_margin="8dp"
                android:text="@string/insectProteinOne"
                android:textColor="@color/colorPrimaryText"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sectionThreeAndHalf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_corners_alpha">

            <TextView
                android:id="@+id/titleThreeAndHalf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="8dp"
                android:text="Fruits &amp; Veggies"
                android:textColor="@color/colorAccent"
                android:textSize="30sp" />

            <View
                android:id="@+id/divideFourAndHalf"
                style="@style/dividerGreen"
                android:layout_below="@id/titleThreeAndHalf"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/infoThreeAndHalf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divideFourAndHalf"
                android:layout_margin="8dp"
                android:text="@string/veggiesFruitsOne"
                android:textColor="@color/colorPrimaryText"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sectionFour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_corners_alpha">

            <TextView
                android:id="@+id/titleOneFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="8dp"
                android:text="More Info"
                android:textColor="@color/colorAccent"
                android:textSize="30sp" />

            <View
                android:id="@+id/divideFive"
                style="@style/dividerGreen"
                android:layout_below="@id/titleOneFour"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/infoOneFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divideFive"
                android:layout_margin="8dp"
                android:text="@string/moreInfoOne"
                android:textColor="@color/colorPrimaryText"
                android:textSize="18sp" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>


    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:descendantFocusability="blocksDescendants"
        android:elevation="10dp"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-4542204585673533/6066052007"
        googleads:loadAdOnCreate="true"
        googleads:testDevices="TEST_EMULATOR" />

    </RelativeLayout>